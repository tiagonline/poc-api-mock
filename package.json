{
  "name": "poc-api-mock",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "mock:start": "docker compose -f mock-server/docker-compose.yml up -d",
    "mock:stop": "docker compose -f mock-server/docker-compose.yml down",
    "test:api": "playwright test tests/api",
    "test:e2e": "playwright test tests/e2e",
    "test:ci": "sh -c 'npm run mock:start && npm run test:api && npm run test:e2e; EXIT_CODE=$?; npm run mock:stop; exit $EXIT_CODE'"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.53.0",
    "ajv": "^8.17.1",
    "dotenv": "^16.4.5"
  }
}